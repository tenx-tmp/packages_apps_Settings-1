<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_height="110dp"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/tenx_status_card"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

           <TextView
                android:id="@+id/tenx_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_1"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="TenX-OS" />

            <TextView
                android:id="@+id/tenx_discription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_2"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tenx_text"
                android:text="The Custom ROM" />

            <TextView
                android:id="@+id/tenx_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_2"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tenx_discription"
                android:text="Developed with love by • Advaith Bhat, • Roger T &amp; • Kshitij" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
