<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:id="@+id/tenx_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/tenx_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

             <LinearLayout
                 android:id="@+id/version_card"
                 android:layout_width="150dp"
                 android:layout_height="120dp"
                 android:layout_marginStart="15dp"
                 android:background="@drawable/about_card">

                <RelativeLayout
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/version_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_version" />

                    <TextView
                        android:id="@+id/version_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="@string/tenx_version_title"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_below="@+id/version_icon" />

                    <TextView
                        android:id="@+id/version_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/version_title"
                        android:gravity="center_horizontal"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14.5sp"
                        android:lineSpacingMultiplier="1.3" />

                </RelativeLayout>

             </LinearLayout>

             <LinearLayout
                 android:id="@+id/device_card"
                 android:layout_width="150dp"
                 android:layout_height="120dp"
                 android:layout_marginStart="15dp"
                 android:background="@drawable/about_card">

                <RelativeLayout
                    android:id="@+id/device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/device_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_device" />

                    <TextView
                        android:id="@+id/device_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="@string/tenx_device_title"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_below="@+id/device_icon" />

                    <TextView
                        android:id="@+id/device_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/device_title"
                        android:gravity="center_horizontal"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14.5sp"
                        android:lineSpacingMultiplier="1.3" />

                </RelativeLayout>

             </LinearLayout>

             <LinearLayout
                 android:id="@+id/codename_card"
                 android:layout_width="150dp"
                 android:layout_height="120dp"
                 android:layout_marginStart="15dp"
                 android:background="@drawable/about_card">

                <RelativeLayout
                    android:id="@+id/codename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/codename_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_codename" />

                    <TextView
                        android:id="@+id/device_codename_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="@string/device_codename_title"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_below="@+id/codename_icon" />

                    <TextView
                        android:id="@+id/device_codename_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/device_codename_title"
                        android:gravity="center_horizontal"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14.5sp"
                        android:lineSpacingMultiplier="1.3" />

                 </RelativeLayout>

             </LinearLayout>

             <LinearLayout
                 android:id="@+id/buildtype_card"
                 android:layout_width="150dp"
                 android:layout_height="120dp"
                 android:layout_marginStart="15dp"
                 android:background="@drawable/about_card">

                <RelativeLayout
                    android:id="@+id/buildtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/release_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/build_type_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="@string/tenx_build_release_type_title"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_below="@+id/release_icon" />

                    <TextView
                        android:id="@+id/build_type_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/build_type_title"
                        android:gravity="center_horizontal"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14.5sp"
                        android:lineSpacingMultiplier="1.3" />

                </RelativeLayout>

            </LinearLayout>

             <LinearLayout
                 android:id="@+id/maintainer_card"
                 android:layout_width="150dp"
                 android:layout_height="120dp"
                 android:layout_marginStart="15dp"
                 android:layout_marginEnd="15dp"
                 android:background="@drawable/about_card">

                <RelativeLayout
                    android:id="@+id/maintainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/maintainer_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_tenx_maintainer" />

                    <TextView
                        android:id="@+id/maintainer_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="@string/maintainer"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_below="@+id/maintainer_icon" />

                    <TextView
                        android:id="@+id/maintainer_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/maintainer_title"
                        android:text="@string/maintainer_name"
                        android:gravity="center_horizontal"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14.5sp"
                        android:lineSpacingMultiplier="1.3" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>
